        app:layout_constraintTop_toTopOf="parent"
        tools:text="CPU Name" />

    <TextView
        android:id="@+id/spieler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginLeft="232dp"
