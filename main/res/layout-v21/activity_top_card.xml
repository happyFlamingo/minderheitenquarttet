<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible">

    <TextView
        android:id="@+id/topcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:fontFamily="@font/finger_paint"
        android:text="@string/topCard"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:fontFamily="@font/finger_paint"
        android:textColor="@color/design_default_color_error"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Charakter Name" />

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="247dp"
        android:layout_height="307dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="289dp"
        android:contentDescription="@string/character"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/feministen" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="170dp"
        android:layout_height="187dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="97dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RadioButton
            android:id="@+id/bevoelkerungsanteil"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"
            android:fontFamily="@font/finger_paint"
            android:onClick="checkButton"
            android:text="@string/str_bevoelkerungsanteil"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="424dp" />

        <RadioButton
            android:id="@+id/bildungsniveau"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"
            android:fontFamily="@font/finger_paint"
            android:onClick="checkButton"
            android:text="@string/str_bildungsniveau"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="586dp" />

        <RadioButton
            android:id="@+id/wohlstand"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"
            android:fontFamily="@font/finger_paint"
            android:onClick="checkButton"
            android:text="@string/str_wohlstand"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="559dp" />

        <RadioButton
            android:id="@+id/homogenitaet"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"
            android:fontFamily="@font/finger_paint"
            android:onClick="checkButton"
            android:text="@string/str_homogenitaet"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="559dp" />

        <RadioButton
            android:id="@+id/gesellschaftlicheAkzeptanz"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"
            android:fontFamily="@font/finger_paint"
            android:onClick="checkButton"
            android:text="@string/str_akzeptanz"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="559dp" />

        <RadioButton
            android:id="@+id/schamgefuehl"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"
            android:fontFamily="@font/finger_paint"
            android:onClick="checkButton"
            android:text="@string/str_schamgefuehl"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="425dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_view_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="637dp"
        android:layout_marginEnd="158dp"
        android:fontFamily="@font/finger_paint"
        android:text="@string/deine_auswahl"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>